<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCheckbox02" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemIconTint">@color/bottom_nav_icon_tint_selector</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Design.BottomNavigationView</item>
    </style>

    <style name="ProfileButtonStyle">
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:backgroundTint">@color/dark_white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:drawableLeft">?attr/drawableLeft</item>
    </style>

    <style name="CartButtonStyle">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/cart_btn_background</item>
    </style>

</resources>